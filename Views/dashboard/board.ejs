<div class="container-fluid container-fluid-custom py-md-5 mb-5">
    <main>
        <div class="row py-md-5 text-center justify-content-center">


            <div class=" col-md-12 col-lg-8 mb-4 mb-md-0">
                <h2 style="margin-bottom: 20px;">لوحة المتصدرين</h2>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>الاسم</th>
                            <th>النتيجة</th>
                            <th>تاريخ اللعب</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% scores.forEach((entry, index)=> { %>
                            <tr>
                                <td>
                                    <%= index + 1 %>
                                </td>
                                <td>
                                    <%= entry.username %>
                                </td>
                                <td>
                                    <%= entry.score %>
                                </td>
                                <td>
                                    <%= new Date(entry.date).toLocaleString() %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>